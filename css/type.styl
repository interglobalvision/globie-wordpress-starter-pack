// FONTS

// declare font families here
  
$font-sans = font-stack('Helvetica');
$font-serif = font-stack('Georgia');

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import 'fonts/icons/materialize-min'

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

// VARIABLES

$font-size-larger = 1.3rem

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = .001em
$font-tracking-wider = .05em

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic
  
p
  margin-bottom: 1rem
  
// FONT RULES
  
.font-sans
  font-family: $font-sans
  
.font-serif
  font-family: $font-serif
  
.font-larger
  font-size: $font-size-larger

.font-italic
  font-style: italic

.font-bold
  font-weight: bold

.font-small-caps
  text-transform: uppercase
  font-size: .85em

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

// TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

// LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none
  
font-sizes($size-basic = 15px, $size-h1 = false, $size-h2 = false, $size-h3 = false, $size-h4 = false, $size-h5 = false, $size-h6 = false)

  html
    font-size: $size-basic
    
  if ($size-h1) 
    h1, .font-size-h1
      font-size: $size-h1
      
  if ($size-h2) 
    h2, .font-size-h2
      font-size: $size-h2
      
  if ($size-h3) 
    h3, .font-size-h3
      font-size: $size-h3
      
  if ($size-h4) 
    h4, .font-size-h4
      font-size: $size-h4
      
  if ($size-h5) 
    h5, .font-size-h5
      font-size: $size-h5
      
  if ($size-h6) 
    h6, .font-size-h6
      font-size: $size-h6
