// FONTS

// declare font families here
  
$font-sans = font-stack('Helvetica');

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import 'fonts/icons/materialize-min'

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

// VARIABLES

$font-size-larger = 1.3rem

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = .001em
$font-tracking-wider = .05em

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans

  // FONT RULES

.font-italic
  font-style: italic

.font-bold
  font-weight: bold

.font-small-caps
  text-transform: uppercase

.font-capitalize
  text-transform: capitalize

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

  // LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none
  
type($size-basic = 15px, $size-h3 = 18px, $size-h2 = 21px, $size-h1 = 24px)
  
  html
    font-size: $size-basic
    letter-spacing: $font-tracking-basic

  body
    line-height: $font-leading-basic
    
  h1, .font-size-h1
    font-size: $size-h1
    
  h2, .font-size-h2
    font-size: $size-h2

  h3, .font-size-h3
    font-size: $size-h3
    
  p
    margin-bottom: 1rem
    
  .font-small-caps
    font-size: .85em
