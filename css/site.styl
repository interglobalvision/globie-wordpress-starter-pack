@import "resets"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin:0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
.col1
  width: (1*$col)+(0*$gutter)
.col2
  width: (2*$col)+(1*$gutter)
.col3
  width: (3*$col)+(2*$gutter)
.col4
  width: (4*$col)+(3*$gutter)
.col5
  width: (5*$col)+(4*$gutter)
.col6
  width: (6*$col)+(5*$gutter)
.col7
  width: (7*$col)+(6*$gutter)
.col8
  width: (8*$col)+(7*$gutter)
.col9
  width: (9*$col)+(8*$gutter)
.col10
  width: (10*$col)+(9*$gutter)
.col11
  width: (11*$col)+(10*$gutter)
.col12
  width: (12*$col)+(11*$gutter)

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$soft-black = rgb(14,14,14)
$soft-white = rgb(253,253,253)

// TYPOGRAPHY

body
  font-family:helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $soft-white
  color: $soft-black

img
  max-width: 100%
  height: auto


//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header
  width: 100%

// POSTS LOOP
#posts
  width: 100%

.post
  width: 100%

#pagination
  width: 100%


// FOOTER

#footer
  width: 100%


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%